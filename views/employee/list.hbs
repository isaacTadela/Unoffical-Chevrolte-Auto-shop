
<div class="col-md-10 m-auto">
    <div class="card card-body">
	
<h3>{{viewTitle}}<a class="btn btn-secondary" href="/users/logout" style="float: right;"><i class="fas fa-sign-out-alt"></i> Log out</a></h3>
<a class="btn btn-secondary" style="width:26%" href="/employee"><i class="fa fa-plus"></i> Insert a New Treatment</a><br><br>

<table id="example" class="table table-striped table-bordered" >
    <thead>
        <tr>
            <th>Full Name</th>
			<th>Vehicle model</th>
			<th>Vehicle model image</th>
			<th>Treatment</th>
			<th>Cost</th>
			<th>Created at</th>
            <th>Mobile</th>
			<th>Email</th>
            <th>City</th>
            <th>Edit/Delete</th>
        </tr>
    </thead>
    <tbody>
        {{#each list}}
        <tr>
            <td>{{this.fullName}}</td>
			
			<td>{{this.vehicle}}</td>
			<td>{{this.img}}</td>
			<td>{{this.treatment}}</td>
			<td>{{this.cost}}</td>
			<td>{{this.created_at}}</td>
			
			<td>{{this.mobile}}</td>
            <td>{{this.email}}</td>
            <td>{{this.city}}</td>
			
            <td>
                <a href="/employee/{{this._id}}"><i class="far fa-edit"></i></a>
                <a href="/employee/delete/{{this._id}}" onclick="return confirm('Are you sure to delete this record ?');"><i class="fa fa-trash fa-lg" aria-hidden="true"></i></a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>
</div>
</div>