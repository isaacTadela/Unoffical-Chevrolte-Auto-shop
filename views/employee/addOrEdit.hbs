<div class="col-md-5 m-auto">
    <div class="card card-body">
	
<h3>{{viewTitle}}<a class="btn btn-secondary" href="/users/logout" style="float: right;"><i class="fas fa-sign-out-alt"></i> Log out</a></h3>

<form action="/employee" method="POST" autocomplete="off" >
    <input type="hidden" name="_id" value="{{employee._id}}">
    <div class="form-row">
		<div class="form-group col-md-6">
			<label>Full Name</label>
			<input type="text" class="form-control" name="fullName" placeholder="Full Customer Name" value="{{employee.fullName}}">
			<div class="text-danger">{{employee.fullNameError}}</div>
		</div>
		<div class="form-group col-md-6">
			<label>Vehicle</label>
			<select type="text" class="form-control" name="vehicle" placeholder="Vehicle model" value="{{employee.vehicle}}">
				<option name="colorado">Colorado</option>
				<option name="cruze">Cruze</option>
				<option name="equinox">Equinox</option>
				<option name="impala">Impala</option>
				<option name="malibu">Malibu</option>
				<option name="silverado">Silverado</option>
				<option name="suburban">Suburban</option>
				<option name="tahoe">Tahoe</option>
				<option name="traverse">Traverse</option>
				<option name="trax">Trax</option>
			</select>
			<div class="text-danger">
				{{employee.vehicleError}}</div>
		</div>
    </div>
	
	<div class="form-row">
		<div class="form-group col-md-8">
			<label>Treatment</label>
			<input type="text" class="form-control" name="treatment" placeholder="Treatment Details" value="{{employee.treatment}}">
		</div>
		<div class="form-group col-md-4">
			<label>Cost</label>
			<input type="text" class="form-control" name="cost" placeholder="Cost" value="{{employee.cost}}">
			<div class="text-danger">
				{{employee.costError}}</div>
		</div>
    </div>
    <div class="form-group">
        <label>Email</label>
        <input type="text" class="form-control" name="email" placeholder="Email" value="{{employee.email}}">
        <div class="text-danger">
            {{employee.emailError}}</div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label>Mobile</label>
            <input type="text" class="form-control" name="mobile" placeholder="Mobile" value="{{employee.mobile}}">
			<div class="text-danger">
				{{employee.mobileError}}</div>
        </div>
        <div class="form-group col-md-6">
            <label>City</label>
            <input type="text" class="form-control" name="city" placeholder="City" value="{{employee.city}}">
        </div>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-info"><i class="fa fa-database"></i> Submit</button>
        <a class="btn btn-secondary" href="/employee/list"><i class="fa fa-list-alt"></i> View All</a>
		<div class="text-danger">
				{{employee.generalError}}</div>
    </div>
		
</form>
</div>
</div>